.btn
	text-decoration: none
	padding: 0 10px
	line-height: 37px
	height: 40px
	text-align: center
	color $red
	border 1px solid $red
	border-radius 30px
	position: relative
	overflow: hidden
	display: inline-block
	max-width: 230px
	width: 100%
	transform translateZ(0)
	&-full
		max-width: 100%
	&-send
		.icon
			position: absolute
			right 20px
			top 50%
			margin-top: -7px
	span
		z-index: 10
		position: relative
		transition all 0.3s
	&:hover
		color white
		span
			color white
		&:before
			transform translateZ(0)
	&:before
		content ''
		position: absolute
		left 0
		width: 100%
		top 0
		height: 102%
		background-color: $red
		transform translateX(-100%) translateZ(0)
		transition all 0.3s
	&-black
		color #101010
		border-color #101010
		&:before
			background-color: #101010
	&-excel
		.icon
			position: absolute
			left 20px
			top 50%
			margin-top: -10px
			z-index: 10
			&:before
				sprite($excel_hover)
		&:hover
			.icon:after
				opacity: 0
			.icon:before
				opacity: 1
	&-red
		background-color: #f94a49
		border none
		color white
		&:before
			background-color: black
			border-color: transparent
	&-check
		font-size 1.125rem
		line-height: 36px
		padding-left: 25px
		.icon
			position: absolute
			left 15px
			top 50%
			margin-top: -5px
.mobile-menu
	background-color white
	color black
	width 200px
	padding 20px
	position fixed
	left 0
	top 0
	min-height 100%
	overflow auto
	transition transform 0.3s
	transform translateX(-100%)
	&.active
		transform translateX(0)
	+above(880px)
		display none
	a, span
		font-weight 700
		text-transform uppercase
		text-decoration none
		display block
		margin 10px 0
		font-size 1.3rem
		&:first-child
			margin-top 0
	span
		color white

.field
	height: 40px
	display: block
	width: 100%
	padding-left: 20px
	padding-right: 20px
	margin: 20px auto
	background-color: #f3f3f3
	border: 1px solid #c5c5c5
	border-radius 25px
	&::placeholder
		color #141414
	&-text
		resize none
		height: 100px
		padding-top: 10px
		border-radius 15px
	&:focus
		border-color: gray
		outline none

.fadeInUp
	animation fadeInUp

.animated
	animation-fill-mode both

.parallax-slider
	max-height: none

.amount-input
	width 100px
	height 40px
	text-align center
	position relative
	&-sub, &-add
		top 50%
		margin-top: -7px
		left 9px
		border none
		position absolute
		transition all 0.3s
		opacity: 0.5
		&:hover
			opacity: 1
		&:focus
			outline none
	&-add
		left auto
		right 9px
	.field
		width 100%
		height 40px
		text-align center
		padding 0
		padding-left: 25px
		padding-right: 25px
		box-sizing border-box
		border-radius 30px

.remove-item
	padding 5px
	border-radius 50%
	transition all 0.3s
	display: block
	margin: 0 auto
	width: 19px
	height: 19px
	.icon
		vertical-align: top
		&:before
			sprite($cross_hover)
	&:hover
		background-color: $red
		.icon:after
			opacity: 0
		.icon:before
			opacity: 1

.popup-close
	width: 30px
	height: 30px
	position: absolute
	right -15px
	top -15px
	background #f94a49 url(../images/icons/cross-hover.png) no-repeat center
	transition all 0.3s
	border-radius 50%
	&:hover
		background-color: black