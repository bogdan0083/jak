html
	box-sizing border-box
	font-size: 16px
	height: 100%

*, *:before, *:after
	box-sizing inherit

generateClasses($spritesheet_sprites)

body
	color black
	font-size 1rem
	font-family 'Forum', sans-serif
	font-weight 400
	height: 100%

a
	text-decoration underline
	color inherit
	transition all 0.3s
	&:hover
		text-decoration none


.page-wrapper
	min-height: 100%
	padding-bottom: 172px
	overflow: hidden
.icon
	display inline-block
	vertical-align middle
	position relative
	background-color: transparent
	padding: 0
	border none
	&:before
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display block
		opacity: 0
		transition all 0.3s
	&:after
		content ''
		top 0
		left 0
		position: absolute
		opacity: 1
		transition all 0.3s
	+ span
		display inline-block
		vertical-align middle

img
	max-width 100%
	max-height 100%


input:focus
	outline none

.nav-trigger-wrap
	float: left
	text-decoration: none
	text-transform: uppercase
	position: relative
	padding-left: 15px
	+above($screen-sm)
		display: none
	&:before
		content ''
		width: 3px
		height: 17px
		position: absolute
		left 0
		top 50%
		margin-top: -10px
		border-top: 3px solid white
		border-bottom: 3px solid white
	&:after
		content ''
		width: 3px
		height: 3px
		position: absolute
		left 0
		top 50%
		margin-top: -3px
		background-color: #fff

button:focus
	outline none
	
.mobile-search-trigger
	float: right
	margin-top: 7px
	+above($screen-sm)
		margin-top: 15px
	+above($screen-md)
		display: none
.nav-trigger
	margin: 0 auto
	hamburger-generator(21px, 2px, 6px, $red)
	text-align center
	position relative
	z-index 10
	display block
	&.active
		hamburger-animation()

.page-wrapper
	transition all 0.3s
	position: relative
	&.active
		transform translateX(200px)
	&.js-overlay
		position: relative
		&:before
			content ''
			background-color: rgba(black, 0.4)
			position: fixed
			left: 0
			top: 0
			width: 100%
			height: 100%
			z-index: 100

.container
	padding 0 10px
	+above($screen-sm)
		padding: 0 15px

