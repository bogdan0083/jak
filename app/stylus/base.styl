.btn
	text-decoration: none
	padding: 0 10px
	line-height: 37px
	height: 40px
	text-align: center
	color $red
	border 1px solid $red
	border-radius 30px
	position: relative
	overflow: hidden
	transform translateZ(0)
	span
		z-index: 10
		position: relative
		transition all 0.3s
	&:hover
		color white
		span
			color white
		&:before
			transform translateZ(0)
	&:before
		content ''
		position: absolute
		left 0
		width: 100%
		height: 100%
		background-color: $red
		transform translateX(-100%) translateZ(0)
		border-radius 30px
		transition all 0.3s
	&-black
		color #101010
		border-color #101010
		&:before
			background-color: #101010
	&-excel
		background url("../images/icons/excel.png") no-repeat 20px center
		.i-excel
			position: absolute
			left 20px
			top 50%
			margin-top: -10px
			z-index: 10
			&:before
				sprite($excel_hover)
		&:hover
			.i-excel:after
				opacity: 0
			.i-excel:before
				opacity: 1
.mobile-menu
	background-color white
	color black
	width 200px
	padding 20px
	position fixed
	left 0
	top 0
	min-height 100%
	overflow auto
	transition transform 0.3s
	transform translateX(-100%)
	&.active
		transform translateX(0)
	+above(880px)
		display none
	a, span
		font-weight 700
		text-transform uppercase
		text-decoration none
		display block
		margin 10px 0
		font-size 1.3rem
		&:first-child
			margin-top 0
	span
		color white

.field
	height: 40px
	display: block
	width: 100%
	padding-left: 20px
	padding-right: 20px
	margin: 0 auto
	background-color: #fdfcfc
	border: 1px solid #dfdfdf
	&-text
		resize none
		height: 100px
		padding-top: 10px
	&:focus
		border-color: gray
		outline none

.fadeInUp
	animation fadeInUp

.animated
	animation-fill-mode both